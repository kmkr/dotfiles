exec_always --no-startup-id $HOME/.config/polybar/launch.sh

set $mode_system System (l) lock, (e) logout, (s) suspend, (u) switch user, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id dm-tool switch-to-greeter, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+BackSpace mode "$mode_system"

# Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 1 set Master 2dB-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 1 set Master 2dB+
bindsym XF86AudioMute exec --no-startup-id amixer -c 1 set Master toggle
bindsym XF86AudioMicMute exec --no-startup-id amixer -D default set Capture toggle

set $mode_screenshot Screenshot (a) all, (f) focused, (g) all in Gimp, (o) focused in Gimp
mode "$mode_screenshot" {
    bindsym a exec scrot -e 'mv $f /tmp', mode "default"
    bindsym f exec scrot -u -e 'mv $f /tmp', mode "default"
    bindsym g exec scrot -e 'mv $f /tmp && gimp /tmp/$f', mode "default"
    bindsym o exec scrot -u -e 'mv $f /tmp && gimp /tmp/$f', mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Print mode "$mode_screenshot"
bindsym $mod+Print exec xfce4-screenshooter

exec --no-startup-id xautolock -time 10 -locker "i3lock -d -c 000000"
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id sh ~/bin/random-wallaper.sh
exec --no-startup-id xset r rate 200 40
exec --no-startup-id emote

bindsym Ctrl+$mod+Right move workspace to output DP-1
bindsym Ctrl+$mod+Left move workspace to output eDP-1

bindsym Ctrl+$mod+Shift+Right move workspace to output DP-2
bindsym Ctrl+$mod+Shift+Left move workspace to output eDP-1

for_window [class="smplayer"] resize grow width
for_window [class="smplayer"] resize grow width
for_window [class="smplayer"] resize grow width

